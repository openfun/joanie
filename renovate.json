{
  "extends": [
    "github>openfun/renovate-configuration"
  ],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "ignored python dependencies",
      "matchManagers": [
        "setup-cfg"
      ],
      "matchPackageNames": [
        "pydantic",
        "responses"
      ]
    },
    {
      "enabled": false,
      "groupName": "ignored js dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "node",
        "typescript"
      ]
    }
  ]
}
