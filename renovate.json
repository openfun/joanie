{
  "extends": [
    "github>openfun/renovate-configuration"
  ],
  "packageRules": [
    {
      "enabled": false,
      "groupName": "ignored python dependencies",
      "matchManagers": [
        "setup-cfg"
      ],
      "matchPackageNames": []
    },
    {
      "groupName": "allowed django versions",
      "matchManagers": [
        "setup-cfg"
      ],
      "matchPackageNames": [
        "Django"
      ],
      "allowedVersions": "<5"
    },
    {
      "enabled": false,
      "groupName": "ignored js dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "node",
        "undici",
        "date-fns"
      ]
    }
  ]
}
