apiVersion: v1
kind: Secret
metadata:
  labels:
    app: joanie
    service: postgresql
  name: "{{ joanie_database_secret_name }}"
  namespace: "{{ namespace_name }}"
data:
  POSTGRES_USER: "{{ JOANIE_VAULT.DB_USER | default('joanie_user') | b64encode }}"
  POSTGRES_PASSWORD: "{{ JOANIE_VAULT.DB_PASSWORD | default('pass') | b64encode }}"
